doctype html
html(lang="en")
  head
    title Bookit - Login
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&family=Poppins:wght@400;500;600;700&display=swap")
    link(rel="stylesheet" href="/css/styles.css")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Bangers&display=swap" rel="stylesheet")
    script(src="/js/login.js")

  body
    // Header
    header.header
      a.logo(href="/")
        img(src="/images/logo.png" alt="Bookit Logo")
        span.logo-text Bookit
      
      nav.nav-menu
        a(href="/") Home
        a(href="/reservation") Reservation
        a(href="/about") About
        a(href="/view") View
      
      .utilities
        a(href="#")
          img.utility-icon(src="/images/search-analytics.png" alt="Search")
        a(href="#")
          img.utility-icon(src="/images/shopping-bag.png" alt="Shopping Cart")
        a(href="/login")
          img.utility-icon(src="/images/user.png" alt="User Account")

    // Login Form Section
    .login-container
      .login-box
        button.close-btn(onclick="window.location.href='/'") ×
        h2 Login
        form.login-form(action="/login" method="POST")
          .form-group
            .input-with-icon
              input#email(type="email" name="email" required placeholder="Email")
              img.input-icon(src="/images/email.png" alt="Email")

          .form-group
            .input-with-icon
              input#password(type="password" name="password" required placeholder="Password")
              img.input-icon(src="/images/padlock.png" alt="Password")

          a#showForgotPassword.forgot-password(href="#") Forgot Password?
          
          button.login-btn(type="submit") Login
        
        .register-link
          span Don't have an account? 
          a#showRegister(href="#") Register

    // Registration Form Section
    .register-container.hidden
      .register-box
        button.close-btn-register(onclick="window.location.href='/'") ×
        h2 Register
        form.register-form(action="/register" method="POST")
          .form-group
            .input-with-icon
              input#registerName(type="text" name="name" required placeholder="Full Name")
              img.input-icon(src="/images/user.png" alt="Name")

          .form-group
            .input-with-icon
              input#registerEmail(type="email" name="email" required placeholder="Email")
              img.input-icon(src="/images/email.png" alt="Email")

          .form-group
            .input-with-icon
              input#registerPassword(type="password" name="password" required placeholder="Password")
              img.input-icon(src="/images/padlock.png" alt="Password")

          .form-group
            .input-with-icon
              input#confirmPassword(type="password" name="confirmPassword" required placeholder="Confirm Password")
              img.input-icon(src="/images/padlock.png" alt="Confirm Password")

          button.register-btn(type="submit") Register
        
        .login-link
          span Already have an account?
          a#loginLink(href="#") Login

    // Forgot Password Form Section
    .forgot-password-container.hidden
      .forgot-password-box
        button.close-btn-forgot(onclick="window.location.href='/'") ×
        h2 Reset Password
        form.forgot-password-form(action="/forgot-password" method="POST")
          .form-group
            .input-with-icon
              input#forgotEmail(type="email" name="email" required placeholder="Enter your email")
              img.input-icon(src="/images/email.png" alt="Email")

          button.reset-btn(type="submit") Reset Password
        
        .login-link
          span Remember your password?
          a#backToLogin(href="#") Login

    // Popup Message
    #resetPopup.popup-overlay
      .popup-box
        .popup-content
          img.popup-icon(src="/images/email.png" alt="Email Sent")
          h3 Check Your Email
          p We've sent a password reset link to your email address.
          button#closePopup.popup-btn OK