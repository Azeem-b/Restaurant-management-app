//- reserve.pug
extends layout

block content
  .container.mt-5
    h2 Reserve a Table
    form(action="/reserve", method="POST")
      .mb-3
        label.form-label(for="reservation_date") Reservation Date
        input.form-control(type="date", id="reservation_date", name="reservation_date", required)
      .mb-3
        label.form-label(for="reservation_time") Reservation Time
        input.form-control(type="time", id="reservation_time", name="reservation_time", required)
      .mb-3
        label.form-label(for="number_of_guests") Number of Guests
        input.form-control(type="number", id="number_of_guests", name="number_of_guests", min="1", required)
      .mb-3
        label.form-label(for="phone_number") Phone Number
        input.form-control(type="tel", id="phone_number", name="phone_number", placeholder="Enter your phone number", required)
      button.btn.btn-primary(type="submit") Reserve Table