doctype html
html(lang="en")
  head
    title Bookit - Table Reservation
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&family=Poppins:wght@400;500;600;700&display=swap")
    link(rel="stylesheet" href="/css/styles.css")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Bangers&display=swap" rel="stylesheet")


  body
    // Header
    header.header
      a.logo(href="/")
        img(src="/images/logo.png" alt="Bookit Logo")
        span.logo-text Bookit
      
      nav.nav-menu
        a(href="/") Home
        a(href="/reservation") Reservation
        a(href="/about") About
        a(href="/view") View
      
      .utilities
        a(href="#")
          img.utility-icon(src="/images/search-analytics.png" alt="Search")
        a(href="#")
          img.utility-icon(src="/images/shopping-bag.png" alt="Shopping Cart")
        a(href="/login")
          img.utility-icon(src="/images/user.png" alt="User Account")
    
    // Hero Section
    main.hero
      .hero-content
        h1.hero-title Table 
          br
          | Reservation
        p.hero-subtitle Reserve your table now for an unforgettable dining experience !
        a.book-now-btn(href="/login") Book Now
    