extends layout

block content
  // Hero Section with Background Image
  .hero-section.text-white.text-center.py-5(style="background: url('/images/hero-bg.jpg') center center/cover no-repeat; min-height: 400px; display: flex; align-items: center; justify-content: center;")
    .container
      h1.display-4 Welcome to BookIt
      p.lead Reserve your table quickly and easily with BookIt.
      if user
        a.btn.btn-light.btn-lg(href="/dashboard") Go to Dashboard
      else
        a.btn.btn-light.btn-lg.me-2(href="/register") Register
        a.btn.btn-outline-light.btn-lg(href="/login") Login

  // Features Section
  .container.mt-5
    .row
      .col-md-4.text-center
        h2 Easy Reservations
        p Book your table in just a few clicks.
      .col-md-4.text-center
        h2 Fast Confirmation
        p Get instant confirmation for your reservations.
      .col-md-4.text-center
        h2 Manage Bookings
        p View and manage your reservations anytime.