doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Bookit - Restaurant Booking
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&family=Poppins:wght@400;500;600;700&display=swap")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css")
        link(rel="stylesheet", href="/css/home.css")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Bangers&display=swap" rel="stylesheet")

    body
        header.header
            a.logo(href="/")
                img(src="/images/logo.png" alt="Bookit Logo")
                span.logo-text Bookit
            
            nav.nav-menu
                a(href="/") Home
                a(href="/reservation") Reservation
                a(href="/about") About
                a(href="/view") View
            
            .utilities
                a(href="#")
                    img.utility-icon(src="/images/search-analytics.png" alt="Search")
                a(href="#")
                    img.utility-icon(src="/images/shopping-bag.png" alt="Shopping Cart")
                a(href="/login")
                    img.utility-icon(src="/images/user.png" alt="User Account")

        main.main-content
            .search-section
                .search-container
                    input(type="text", placeholder="Search...")
                    button(type="submit")
                        i.fas.fa-search

            .banner-section
                .swiper.banner-slider
                    .swiper-wrapper
                        .swiper-slide
                            img(src="/images/nt.jpg", alt="Restaurant Banner 1")
                        .swiper-slide
                            img(src="/images/h.jpg", alt="Restaurant Banner 2")
                        .swiper-slide
                            img(src="/images/a.jpg", alt="Restaurant Banner 3")
                    .swiper-pagination
                    .swiper-button-prev
                    .swiper-button-next

            .categories
                .category-item.active
                    i.fas.fa-utensils
                    span All
                .category-item
                    i.fas.fa-wine-glass-alt
                    span Asian
                .category-item
                    i.fas.fa-concierge-bell
                    span Italian
                .category-item
                    i.fas.fa-leaf
                    span Vegan
                .category-item
                    i.fas.fa-pepper-hot
                    span Chinese

            .restaurant-cards
                .swiper.card-slider
                    .swiper-wrapper
                        .swiper-slide
                            .card(data-category="chinese")
                                .card-image
                                    img(src="/images/chinese1.jpg", alt="Chinese Cuisine")
                                .card-content
                                    .card-title Chinese Cuisine
                                    .card-price 
                                        span $50.00
                                        img.calendar-icon(src="/images/small_orange_color_icon_of_calendar-removebg-preview.png", alt="Book")
                        .swiper-slide
                            .card(data-category="italian")
                                .card-image
                                    img(src="/images/italian1.jpg", alt="La Cucina")
                                .card-content
                                    .card-title La Cucina
                                    .card-price 
                                        span $35.00
                                        img.calendar-icon(src="/images/small_orange_color_icon_of_calendar-removebg-preview.png", alt="Book")
                        .swiper-slide
                            .card(data-category="asian")
                                .card-image
                                    img(src="/images/asian.jpg", alt="Asian Fusion")
                                .card-content
                                    .card-title Asian Fusion
                                    .card-price 
                                        span $25.00
                                        img.calendar-icon(src="/images/small_orange_color_icon_of_calendar-removebg-preview.png", alt="Book")
                        .swiper-slide
                            .card(data-category="fine-dining")
                                .card-image
                                    img(src="/images/t1.jpg", alt="Fine Dining")
                                .card-content
                                    .card-title Fine Dining
                                    .card-price 
                                        span $45.00
                                        img.calendar-icon(src="/images/small_orange_color_icon_of_calendar-removebg-preview.png", alt="Book")
                        .swiper-slide
                            .card(data-category="vegan")
                                .card-image
                                    img(src="/images/vegan1.jpg", alt="Vegan Delight")
                                .card-content
                                    .card-title Vegan Delight
                                    .card-price 
                                        span $30.00
                                        img.calendar-icon(src="/images/small_orange_color_icon_of_calendar-removebg-preview.png", alt="Book")
                    .swiper-pagination
                    .swiper-button-next
                    .swiper-button-prev

            .disclaimer
                p *10% off will be applied to your first book when you have registered an account, and will apply to full price items only.
                p T&C APPLY

        footer.footer
            .footer-content
                .social-section
                    h4 Our Social Networks
                    .social-icons
                        a(href="#")
                            i.fab.fa-facebook
                        a(href="#")
                            i.fab.fa-twitter
                        a(href="#")
                            i.fab.fa-instagram

                .footer-sections
                    .help-section
                        h4 HOW CAN WE HELP
                        p (0755) 6251-4521/4522/4523
                        p info@bookit.com

                    .about-section
                        h4 ABOUT US
                        p How to Order
                        p Browse & Shop

                    .location-section
                        h4 LOCATION
                        p 213 Baker Boulevard
                        p Richmond, VA

        script(src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer)
        script(src="/js/home.js")
