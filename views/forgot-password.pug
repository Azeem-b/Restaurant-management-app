extends layout

block content
  .row.mt-5
    .col-md-6.mx-auto
      h2 Forgot Password
      p Enter your email address and we'll send you instructions to reset your password (feature coming soon).
      if message
        .alert.alert-info= message
      form(action="/forgot-password", method="POST")
        .mb-3
          label.form-label(for="email") Email
          input.form-control(type="email", id="email", name="email", required)
        button.btn.btn-primary(type="submit") Send Reset Link
      p.mt-3
        a(href="/login") Back to Login 